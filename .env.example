NODE_ENV=production
PORT=3000

DB_HOST=your_database_host
DB_PORT=5432
DB_USERNAME=your_database_user
DB_PASSWORD=your_secure_password
DB_DATABASE=your_database_name

JWT_SECRET=generate-a-256-bit-random-string-here
JWT_EXPIRES_IN=24h

# Admin seed (recommended in production)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-immediately

THROTTLE_TTL=60
THROTTLE_LIMIT=10

# WebSocket / Location (optional)
WS_MAX_PAYLOAD_BYTES=8192
WS_RATE_LIMIT_WINDOW_MS=30000
WS_RATE_LIMIT_MAX_VIOLATIONS=5
WS_MAX_DEVICE_TIME_SKEW_MS=600000
LOCATION_DB_SAVE_INTERVAL_MS=60000

# Redis (optional)
REDIS_URL=redis://localhost:6379
